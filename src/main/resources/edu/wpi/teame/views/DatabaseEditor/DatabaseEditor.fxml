                           <children>
                              <Line endX="125.0" />
                              <Button fx:id="importButton" mnemonicParsing="false" text="Import" />
                              <Button fx:id="exportButton" mnemonicParsing="false" text="Export" />
                           </children>
                        </VBox>
                        <Region prefHeight="200.0" prefWidth="250.0" VBox.vgrow="ALWAYS" />
                        <Line endX="125.0" />
                        <Button fx:id="backButton" mnemonicParsing="false" text="Back" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <fx:include source="../MenuBar.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
