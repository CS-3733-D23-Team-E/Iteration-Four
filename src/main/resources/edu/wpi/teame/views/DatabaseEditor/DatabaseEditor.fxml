            <HBox pickOnBounds="false" style="-fx-background-color: null;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <VBox fx:id="sidebar" alignment="TOP_CENTER" minWidth="-Infinity" pickOnBounds="false" prefWidth="250.0" spacing="20.0" style="-fx-background-color: #f1f1f1;">
                     <children>
                        <Label fx:id="editorTitle" text="Choose Editor">
                           <font>
                              <Font name="Roboto" size="36.0" />
                           </font>
                        </Label>
                        <Line endX="125.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Line>
                        <ToggleButton fx:id="tableEditorSwapButton" mnemonicParsing="false" selected="true" text="Table Editor">
                           <toggleGroup>
                              <ToggleGroup fx:id="editorGroup" />
                           </toggleGroup>
                        </ToggleButton>
                        <ToggleButton fx:id="mapEditorSwapButton" mnemonicParsing="false" text="Map Editor" toggleGroup="$editorGroup" />
                        <ToggleButton fx:id="moveEditorSwapButton" mnemonicParsing="false" text="Move Editor" toggleGroup="$editorGroup" />
                        <ToggleButton fx:id="requestsEditorSwapButton" mnemonicParsing="false" text="Requests Editor" toggleGroup="$editorGroup" />
                        <ToggleButton fx:id="employeeEditorSwapButton" mnemonicParsing="false" text="Employee Editor" toggleGroup="$editorGroup" />
