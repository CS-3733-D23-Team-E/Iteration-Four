<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teame.controllers.DatabaseEditor.DatabaseEditorController">
   <children>
      <MFXButton fx:id="backButton" text="Back" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <TabPane fx:id="tabPane" layoutY="25.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
        <tabs>
          <Tab fx:id="editDatabaseTab" text="Edit Database">
            <content>
              <AnchorPane>
                     <children>
                        <fx:include source="DatabaseTableView.fxml" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="editMapTab" text="Edit Map">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <fx:include fx:id="mapView" source="DatabaseMapView.fxml" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="editServiceRequestTab" text="Edit Service Requests">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0">
                        <children>
                            <fx:include fx:id="serviceRequestView" source="DatabaseServiceRequestView.fxml" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
            <Tab fx:id="moveTab" text="Move Departments">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0">
                        <children>
                            <fx:include fx:id="moveComponentView" source="../MoveComponent.fxml" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
